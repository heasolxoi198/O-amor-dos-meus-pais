  <script>
    // Função para entrar no site
    function enterSite() {
      document.getElementById('intro-screen').classList.add('hidden');
      setTimeout(() => {
        document.getElementById('main-content').classList.add('visible');
      }, 1000);
    }

    // Estrelas caindo
    const starsContainer = document.getElementById('stars');
    for (let i = 0; i < 100; i++) {
      const star = document.createElement('div');
      star.classList.add('star');
      star.style.width = Math.random() * 3 + 'px';
      star.style.height = star.style.width;
      star.style.left = Math.random() * 100 + '%';
      star.style.top = Math.random() * -100 + 'px';
      star.style.animationDuration = Math.random() * 8 + 5 + 's';
      star.style.animationDelay = Math.random() * 5 + 's';
      star.style.opacity = Math.random() * 0.8 + 0.2;
      starsContainer.appendChild(star);
    }

    // Contador - início em 23/10/1993
    const startDate = new Date(1993, 9, 23, 0, 0, 0); // mês 9 = outubro (0=jan, 9=out)

    function updateTimer() {
      const now = new Date();
      let years = now.getFullYear() - startDate.getFullYear();
      let months = now.getMonth() - startDate.getMonth();
      let days = now.getDate() - startDate.getDate();

      if (days < 0) {
        months--;
        const tempDate = new Date(now.getFullYear(), now.getMonth(), 0);
        days += tempDate.getDate();
      }
      if (months < 0) {
        years--;
        months += 12;
      }

      const diffMs = now - startDate;
      const hours = Math.floor(diffMs / 3600000) % 24;
      const minutes = Math.floor(diffMs / 60000) % 60;
      const seconds = Math.floor(diffMs / 1000) % 60;

      const pad = (n) => n.toString().padStart(2, '0');

      document.getElementById('timer').innerHTML =
        `${years} anos, ${months} meses, ${days} dias, ${pad(hours)}h ${pad(minutes)}min ${pad(seconds)}s`;
    }

    updateTimer();
    setInterval(updateTimer, 1000);
  </script>
